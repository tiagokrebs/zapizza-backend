{# todo: necessita de validações melhores nos inputs #}

{% extends "base.jinja2" %}
{% block title %}Recuperar a Senha {% endblock %}
{% block content %}

<div class="wrapper-content-sign-in ">
    <div class="container text-center">
        <div class="smallbox form-signin1">
            <div class="form-group">
                <h2>Recuperar Senha</h2>


                {% if form_block %}
                <div class="alert alert-warning" role="alert">
                    {{ form_block }}
                </div>
                {% else %}
                {% if form_error %}
                <div class="alert alert-warning" role="alert">
                    {{ form_error }}
                </div>
                {% endif %}
                <form method="POST">
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control"
                               name="password"
                               id="password" value="{{ password }}">
                    </div>
                    <div class="form-group">
                        <label for="cpassword">Confirmação Password</label>
                        <input type="password" class="form-control"
                               name="cpassword"
                               id="cpassword" value="{{ cpassword }}">
                    </div>
                    <button type="submit" name="form.submitted" class="btn btn-primary btn-round">Alterar</button>
                </form>
                {% endif %}
            </div>
        </div>
    </div>
</div>



{% endblock %}
