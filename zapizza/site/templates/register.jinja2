{# página de registro #}
{# todo: necessita de validações melhores nos inputs #}

{% extends "base.jinja2" %}
{% block title %}Registro{% endblock %}
{% block content %}

<div class="wrapper-content-sign-in ">
    <div class="container text-center">
        <div class="smallbox form-signin1">
            <div class="form-group">
                <h2>Registro</h2>


                {% if form_error %}
                <div class="alert alert-warning" role="alert">
                    {{ form_error }}
                </div>
                {% endif %}

                <form method="POST">
                    <div class="form-group">
                        <label for="email">E-mail</label>
                        <input class="form-control" name="email"
                               id="email" value="{{ email }}">
                    </div>
                    <div class="form-group">
                        <label for="username">Username</label>
                        <input class="form-control" name="username"
                               id="username" value="{{ username }}">
                    </div>
                    <div class="form-group">
                        <label for="password">Password</label>
                        <input type="password" class="form-control"
                               name="password"
                               id="password" value="{{ password }}">
                    </div>
                    <div class="form-group">
                        <label for="cpassword">Confirmação Password</label>
                        <input type="password" class="form-control"
                               name="cpassword"
                               id="cpassword" value="{{ cpassword }}">
                    </div>
                    <div class="form-group">
                        <label for="fname">Primeiro Nome</label>
                        <input class="form-control" name="fname"
                               id="fname" value="{{ fname }}">
                    </div>
                    <div class="form-group">
                        <label for="lname">Último Nome</label>
                        <input class="form-control" name="lname"
                               id="lname" value="{{ lname }}">
                    </div>
                    <button type="submit" name="form.submitted" class="btn btn-primary btn-round">Registrar</button>
                </form>
            </div>
        </div>
    </div>
</div>


{% endblock %}