{% extends "zapizza:site/templates/base.jinja2" %}
{% block title %}Tamanhos{% endblock %}
{% block content %}
<div class="row  align-items-center justify-content-between">
    <div class="col-11 col-sm-12 page-title">
        <h3>Tamanhos</h3>
        <p>Gerencie a sua lista de tamanhos disponíveis</p>
    </div>
</div>

<div class="row">
    <div class="col-sm-16">
        <div class="card">
            <div class="card-header">
                <h6 class="card-tile pull-left">Informe a lista de tamanhos</h6>
                <ul class="nav nav-pills card-header-pills pull-right">
                    <li class="nav-item">
                        <a href="{{ request.route_url('tamanhos_add') }}" class="btn btn-sm btn-outline-secondary btn-round"><i class="fa fa-plus"></i> <span class="text">Novo</span></a>
                    </li>
                </ul>
            </div>
            <div class="card-block">
                <table class="table " id="dataTables-simple">
                    <thead>
                    <tr>
                        <th>Descrição</th>
                        <th>Sabores</th>
                        <th>Bordas</th>
                        <th>Fatias</th>
                        <th>Edição</th>
                        <th>Status</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for tamanho in tamanhos %}
                    <tr class="odd">
                        <td>{{ tamanho.descricao }}</td>
                        <td class="center">{{ tamanho.quant_sabores }}</td>
                        <td class="center">{{ tamanho.quant_bordas }}</td>
                        <td class="center">{{ tamanho.quant_fatias }}</td>
                        <td>
                            <form method="POST">
                                <a href="{{ request.route_url('tamanhos_edit', hashid=tamanho.hash_id) }}" class="btn btn-link btn-sm" style="color:#d4c3ba" data-toggle="popover" data-content="Clique aqui para editar o registro"><i class="fa fa-pencil" ></i></a>
                                {% if tamanho.ativo %}
                                <a href="{{ request.route_url('tamanhos_disable', hashid=tamanho.hash_id) }}" class="btn btn-link btn-sm" style="color:#d4c3ba" data-toggle="popover" data-content="Clique aqui para desativar o registro"><i class="fa fa-ban"></i></a>
                                {% else %}
                                <a href="{{ request.route_url('tamanhos_enable', hashid=tamanho.hash_id) }}" class="btn btn-link btn-sm" style="color:#d4c3ba" data-toggle="popover" data-content="Clique aqui para ativar o registro"><i class="fa fa-check"></i></a>
                                {% endif %}
                            </form>
                        </td>
                        <td>
                            {% if tamanho.ativo %}
                            <span class="status success">Ativo</span>
                            {% else %}
                            <span class="status danger">Inativo</span>
                            {% endif %}
                        </td>
                    </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
</div>

