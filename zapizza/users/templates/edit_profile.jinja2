{% extends "zapizza:site/templates/base.jinja2" %}
{% block title %}Perfil{% endblock %}
{% block content %}
<div class="row  align-items-center justify-content-between">
    <div class="col-11 col-sm-12 page-title">
        <h3>Meu perfil</h3>
        <p>Identifique-se</p>
    </div>
</div>
<div class="row">
    <div class="col-sm-16">
        <div class="card">
            <form method="POST">
                <div class="card-header">
                    <h6 class="card-tile pull-left">Informe seus dados pessoais</h6>
                    <br>
                </div>
                <div class="card-block">
                    <div>
                        {# escrito a mao utilizando funções Deform #}
                        <div class="row justify-content-center">
                            <div class="col-md-10 ">
                                <div class="form-group row">
                                    <div class="col-lg-8 col-md-8 {% if edit_form['email'].error %} has-danger {% endif %}" >
                                        <label class="form-control-label">{{ edit_form['email'].title }}</label>
                                        {% if edit_form['email'].required %} <span class="form-control-label">*</span> {% endif %}
                                        {{ edit_form['email'].serialize() | safe }}
                                        {% if edit_form['email'].error %} <span class="form-control-label">{{ edit_form['email'].error.messages()[0] }}</span> {% endif %}
                                    </div>
                                    <div class="col-lg-8 col-md-8 {% if edit_form['username'].error %} has-danger {% endif %}">
                                        <label class="form-control-label">{{ edit_form['username'].title }}</label>
                                        {% if edit_form['username'].required %} <span class="form-control-label">*</span> {% endif %}
                                        {{ edit_form['username'].serialize() | safe }}
                                        {% if edit_form['username'].error %} <span class="form-control-label">{{ edit_form['username'].error.messages()[0] }}</span> {% endif %}
                                    </div>
                                </div>
                                <div class="form-group row">
                                    <div class="col-lg-8 col-md-8 {% if edit_form['first_name'].error %} has-danger {% endif %}">
                                        <label class="form-control-label">{{ edit_form['first_name'].title }}</label>
                                        {% if edit_form['first_name'].required %} <span class="form-control-label">*</span> {% endif %}
                                        {{ edit_form['first_name'].serialize() | safe }}
                                        {% if edit_form['first_name'].error %} <span class="form-control-label">{{ edit_form['first_name'].error.messages()[0] }}</span> {% endif %}
                                    </div>
                                    <div class="col-lg-8 col-md-8 {% if edit_form['last_name'].error %} has-danger {% endif %}">
                                        <label class="form-control-label">{{ edit_form['last_name'].title }}</label>
                                        {% if edit_form['last_name'].required %} <span class="form-control-label">*</span> {% endif %}
                                        {{ edit_form['last_name'].serialize() | safe }}
                                        {% if edit_form['last_name'].error %} <span class="form-control-label">{{ edit_form['last_name'].error.messages()[0] }}</span> {% endif %}
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="card-footer">
                    <a href="{{ request.route_url('home') }}" class="btn btn-secondary">Cancelar</a>
                    <button type="submit" name="form.submitted" class="btn btn-success pull-right">Gravar</button>
                </div>
            </form>
        </div>
    </div>
</div>
{% endblock %}
